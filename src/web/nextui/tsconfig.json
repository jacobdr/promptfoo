{
  "compilerOptions": {
    "rootDir": "../../..",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": false,
    "emitDeclarationOnly": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "downlevelIteration": true,
    "composite": true,
    "outDir": "./dist",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "./next-env.d.ts",
    "../../../src/**/*.ts",
    "../../../src/**/*.tsx",
    ".next/types/**/*.ts",
    "../../../typings/**/*",
    "../../../package.json"
  ],
  "exclude": ["node_modules", "./dist", "../../../dist"]
}
