{
  "compilerOptions": {
    "rootDir": ".",
    "declaration": true,
    "declarationMap": true,
    "esModuleInterop": true,
    "target": "es2020",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "allowJs": true,
    "incremental": true,
    "composite": true,
    "noEmit": false
  },
  // NOTE: this is broken -- not all providers are output -- see
  // https://github.com/microsoft/TypeScript/issues/30602
  // "references": [{ "path": "./src/web/nextui" }],
  "include": ["package.json", "src", "typings", "src/providers"],
  "exclude": ["node_modules", "**/dist/**", "src/web/nextui", "**/src/web/nextui/dist/**"]
}
